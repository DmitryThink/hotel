<!-- section projects -->
<section class="whitepage no-top" id="projects" aria-label="projects">
  <div class="container-fluid">
    <div class="row">
    
      <!-- filter project -->
      <div class="onStep" data-animation="fadeInUp" data-time="300">
        <div class="filter-wraper text-center">
          <ul id="filter-porto">
            <li class="filt-projects selected" data-project="*">ВСЁ
            </li>
            
            <li class="filt-projects" data-project=".rooms">КОМНАТЫ
            </li>

            <li class="filt-projects" data-project=".resto">КУХНЯ
            </li>

            <li class="filt-projects" data-project=".lands">ЛАНШАФТ
            </li>

            <li class="filt-projects" data-project=".spa">МОРЕ
            </li>
          </ul>
        </div>
      </div>
      <!-- filter project end -->
      
      <!-- start gallery -->
      <div class="no-gutter onStep" data-animation="fadeInUp" data-time="600" id="projects-wrap">
        <% images = Dir.glob("app/assets/images/gallery/land/*.jpg") %>
        <% images.each do |image| %>
          <div class="col-md-3 col-xs-12 item lands">
            <div class="projects big-img">
              <a href="<%= image_path("gallery/land/#{image.split('/').last}") %> ">
                <div class="hovereffect">
                  <img alt="imageportofolio" class="img-responsive" src="<%= image_path("gallery/land/min/#{image.split('/').last}") %> ">
                  <div class="overlay">
                    <div class="icon"><i class="fa fa-search-plus"></i></div>
                  </div>
                </div></a>
            </div>
          </div>
        <% end %>

        <% images = Dir.glob("app/assets/images/gallery/standart/*.jpg") %>
        <% images.each do |image| %>
          <div class="col-md-3 col-xs-12 item rooms">
            <div class="projects big-img">
              <a href="<%= image_path("gallery/standart/#{image.split('/').last}") %> ">
                <div class="hovereffect">
                  <img alt="imageportofolio" class="img-responsive" src="<%= image_path("gallery/standart/min/#{image.split('/').last}") %> ">
                  <div class="overlay">
                    <div class="icon"><i class="fa fa-search-plus"></i></div>
                  </div>
                </div></a>
            </div>
          </div>
        <% end %>

        <% images = Dir.glob("app/assets/images/gallery/luxe/*.jpg") %>
        <% images.each do |image| %>
          <div class="col-md-3 col-xs-12 item rooms">
            <div class="projects big-img">
              <a href="<%= image_path("gallery/luxe/#{image.split('/').last}") %> ">
                <div class="hovereffect">
                  <img alt="imageportofolio" class="img-responsive" src="<%= image_path("gallery/luxe/min/#{image.split('/').last}") %> ">
                  <div class="overlay">
                    <div class="icon"><i class="fa fa-search-plus"></i></div>
                  </div>
                </div></a>
            </div>
          </div>
        <% end %>

        <% images = Dir.glob("app/assets/images/gallery/kitchen/*.jpg") %>
        <% images.each do |image| %>
          <div class="col-md-3 col-xs-12 item resto">
            <div class="projects big-img">
              <a href="<%= image_path("gallery/kitchen/#{image.split('/').last}") %> ">
                <div class="hovereffect">
                  <img alt="imageportofolio" class="img-responsive" src="<%= image_path("gallery/kitchen/min/#{image.split('/').last}") %> ">
                  <div class="overlay">
                    <div class="icon"><i class="fa fa-search-plus"></i></div>
                  </div>
                </div></a>
            </div>
          </div>
        <% end %>

        <% images = Dir.glob("app/assets/images/gallery/sea/*.jpg") %>
        <% images.each do |image| %>
          <div class="col-md-3 col-xs-12 item spa">
            <div class="projects big-img">
              <a href="<%= image_path("gallery/sea/#{image.split('/').last}") %> ">
                <div class="hovereffect">
                  <img alt="imageportofolio" class="img-responsive" src="<%= image_path("gallery/sea/min/#{image.split('/').last}") %> ">
                  <div class="overlay">
                    <div class="icon"><i class="fa fa-search-plus"></i></div>
                  </div>
                </div></a>
            </div>
          </div>
        <% end %>
      </div>
      <!-- gallery end -->
    </div>
  </div>
</section>
<!-- section projects end -->
      