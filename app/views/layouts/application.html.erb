<!DOCTYPE html>
<html>
  <head>
    <title>Волна</title>
    <meta charset="UTF-8">
    <meta name=viewport content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <title>Гостевой дом "Волна"</title>
    <meta content="" name="description">
    <meta content="" name="author">
    <meta content="" name="keywords">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport">
    <link href=<%= image_path('favicon.png') %> rel="icon" sizes="32x32" type="image/png">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- preloader -->
    <div class="bg-preloader-white"></div>
    <div class="preloader-white">
      <div class="mainpreloader">
        <span></span>
      </div>
    </div>
    <!-- preloader end -->

    <!-- content wraper -->
    <div class="content-wrapper">

      <header class="init">

        <!-- subnav -->
        <div class="subnav hidden-lg">
          <div class="container">
            <div class="row">

              <div class="col-md-6">
                <div class="left">
                  <div class="social-icons-subnav">
                    <div><i class="ti-mobile"></i>+38 (050) 830-73-86</div>
                    <div><i class="ti-mobile"></i>+38 (067) 752-38-85</div>
                    <div><i class="ti-email"></i><a href= "mailto:wolna.hotel@gmail.com">wolna.hotel@gmail.com</a></div>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="right">
                  <div class="social-icons-subnav">
                    <a href="#"><span class="ti-facebook"></span></a>
                    <a href="#"><span class="ti-twitter"></span></a>
                    <a  href="#"><span class="ti-instagram"></span></a>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
        <!-- subnav end -->

        <!-- nav -->
        <div class="navbar-default-white navbar-fixed-top">
          <div class="container">
            <div class="row">

              <!-- menu mobile display -->
              <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse">
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span></button>

              <!-- logo -->
              <a class="navbar-brand white" href="/">
                <%= image_tag("logo-white.png", :alt => "logo", :class => "white", ) %>
                <%= image_tag("logo-black.png", :alt => "logo", :class => "black", ) %>
              </a>
              <!-- logo end -->

              <!-- mainmenu start -->
              <div class="white menu-init" id="main-menu">
                <nav id="menu-center">
                  <ul>
                    <li><a href="/">Домой</a></li>
                    <!--<li><a href="about_us">О нас</a></li>-->
                    <li><a href="rooms">Комнаты</a></li>
                    <li><a href="gallery">Галерея</a></li>
                    <li><a href="prices">Цены</a></li>
                    <li><a href="contact">Контакт</a></li>
                    <li>
                      <a class="btn-tel-menu popup-form-tel" href="#phone">Заказать звонок</a>
                    </li>
                    <li>
                      <a class="btn-book-menu popup-form" href="#reservation">ЗАБРОНИРОВАТЬ</a>
                    </li>
                  </ul>
                </nav>
              </div>
              <!-- mainmenu end -->

            </div>
          </div>
          <!-- container -->
        </div>
        <!-- nav end -->
      </header>
    <%= yield %>
    </div>

    <!-- subfooter -->
    <section aria-label="footer" class="subfooter">
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-xs-12">
            <div class="logo">
              <img alt="logo" src="<%= image_path("logo.png") %>">
            </div>

            <p>
              Лучший отель "Волна" ...
            </p>
          </div>


          <div class="col-md-4 col-xs-12 pull-right">
            <h3>
              КОНТАКТЫ
            </h3>

            <address>
              <span>ул. Азовская, 191, Геническая горка</span> <span>ТЕЛЕФОН: +38 (050) 830-73-86</span> <span>EMAIL: <a href="mailto:wolna.hotel@gmail.com">wolna.hotel@gmail.com</a></span> <span>САЙТ: <a href="#">www.wolna.com.ua</a></span>
            </address>
          </div>

        </div>
      </div>
    </section>
    <!-- subfooter end -->

    <!-- footer -->
    <footer class="white">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            &copy; Wolna <%= Time.current.year %>.
          </div>

          <div class="col-md-6">
            <div class="right">
              <div class="social-icons">
                <a href="#"><span class="ti-facebook"></span></a>
                <a href="#"><span class="ti-twitter"></span></a>
                <a  href="#"><span class="ti-instagram"></span></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <!-- footer end -->

    <!-- ScrolltoTop -->
    <div id="totop">
      <span class="ti-angle-up"></span>
    </div>

    </div>

    <!-- Reservation start -->
    <div class="white-popup-block mfp-hide animbounceInDown" data-time="0" id="reservation">
      <form action="#" id="form1" method="post" name="form1">
        <div class="row">

          <div class="col-sm-12 form-group">
            <select class="form-control" id="selectroom">
              <optgroup label="Выберите номер">
                <option value="Standart">Стандарт</option>
                <option value="Luxe">Люкс</option>
              </optgroup>
            </select>
          </div>

          <div class="col-md-12 form-group">
            <div class="input-group">
              <input type="text" name="date1" id="date1" class="form-control fox1" placeholder="ДАТА ВЪЕЗДА">
              <div class="input-group-btn">
                <span class="icon"><i class="fa fa-calendar"></i></span>
              </div>
            </div>
          </div>


          <div class="col-md-12 form-group">
            <div class="input-group">
              <input type="text" name="date2" id="date2" class="form-control fox2" placeholder="ДАТА ВЫЕЗДА">
              <div class="input-group-btn">
                <span class="icon"><i class="fa fa-calendar"></i></span>
              </div>
            </div>
          </div>

          <div class="col-sm-12 form-group">
            <input id="personbook" name="personbook" placeholder="ФАМИЛИЯ" type="text">
          </div>

          <div class="col-sm-12 form-group">
            <input id="namebook" name="namebook" placeholder="ИМЯ" type="text">
          </div>

          <div class="col-sm-12 form-group">
            <input id="emailbook" name="emailbook" placeholder="EMAIL" type="text">
          </div>

          <div class="col-sm-12 form-group">
            <input id="phonebook" name="phonebook" placeholder="ТЕЛЕФОН" type="text">
          </div>

          <div class="col-sm-12 form-group">
            <textarea cols="50" id="messagebook" name="message" placeholder="ВАШЕ СООБЩЕНИЕ(ОСОБЫЕ ПОЖЕЛАНИЯ)" rows="2"></textarea>
          </div>

          <div class="success-white" id="mail_success1">Спасибо резервация выслана!</div>
          <div class="error-white" id="mail_failed1">Что-то не так...</div>
          <button class="btn-content" id="send">ЗАБРОНИРОВАТЬ</button>

        </div>
      </form>
      <div class="payment" id="payment"></div>
    </div>
    <!-- Reservation end -->


    <!-- Phone start -->
    <div class="white-popup-block mfp-hide animbounceInDown" data-time="0" id="phone">
      <form action="#" id="form1" method="post" name="form1">
        <div class="row">

          <div class="col-sm-12 form-group">
            <input id="namebook1" name="namebook1" placeholder="ИМЯ" type="text">
          </div>
          <div class="col-sm-12 form-group">
            <input id="phonebook1" name="phonebook1" placeholder="ТЕЛЕФОН" type="text">
          </div>

          <div class="success-white" id="mail_success2">Спасибо, Вам скоро позвонят!</div>
          <div class="error-white" id="mail_failed2">Что-то не так...</div>
          <button class="btn-content" id="sent_phone">Заказать звонок</button>

        </div>
      </form>
    </div>
    <!-- Phone end -->

    <!-- content wraper end -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
