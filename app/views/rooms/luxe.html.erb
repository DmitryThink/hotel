<!-- Reservation start -->
<div class="white-popup-block mfp-hide animbounceInDown" data-time="0" id="reservation">
  <form action="#" id="form1" method="post" name="form1">
    <div class="row">

      <div class="col-sm-12 form-group">
        <select class="form-control" id="selectroom">
          <optgroup label="Выберите номер">
            <option value="Luxe">Люкс</option>
            <option value="Standart">Стандарт</option>
          </optgroup>
        </select>
      </div>

      <div class="col-md-12 form-group">
        <div class="input-group">
          <input type="text" name="date1" id="date1" class="form-control fox1" placeholder="ДАТА ВЪЕЗДА">
          <div class="input-group-btn">
            <span class="icon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
      </div>


      <div class="col-md-12 form-group">
        <div class="input-group">
          <input type="text" name="date2" id="date2" class="form-control fox2" placeholder="ДАТА ВЫЕЗДА">
          <div class="input-group-btn">
            <span class="icon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
      </div>

      <div class="col-sm-12 form-group">
        <input id="personbook" name="personbook" placeholder="ФАМИЛИЯ" type="text">
      </div>

      <div class="col-sm-12 form-group">
        <input id="namebook" name="namebook" placeholder="ИМЯ" type="text">
      </div>

      <div class="col-sm-12 form-group">
        <input id="emailbook" name="emailbook" placeholder="EMAIL" type="text">
      </div>

      <div class="col-sm-12 form-group">
        <input id="phonebook" name="phonebook" placeholder="ТЕЛЕФОН" type="text">
      </div>

      <div class="col-sm-12 form-group">
        <textarea cols="50" id="messagebook" name="message" placeholder="ВАШЕ СООБЩЕНИЕ(ОСОБЫЕ ПОЖЕЛАНИЯ)" rows="2"></textarea>
      </div>

      <div class="success-white" id="mail_success">Спасибо резервация выслана!</div>
      <div class="error-white" id="mail_failed">Что-то не так...</div>
      <button class="btn-content" id="send">ЗАБРОНИРОВАТЬ</button>

    </div>
  </form>
</div>
<!-- Reservation end -->