<div class="div-center">
  <div class="content">
    <h1>Choose payment</h1>
    <%= form_for @reservation do |f| %>
      <% if @reservation.errors.any? %>
        <% @reservation.errors.full_messages.each do |message| %>
          <li><p class="error text-danger"><%= message %></p></li>
        <% end %>
      <% end %>
      <div class="form-group">
        <label>Price:</label>
        <strong><%= @reservation.total_price%></strong> UAH</br>
        <label>Type of room:</label></br>

        <%= f.radio_button :payment, "card" %> <%= f.label :payment, "Card" %> </br>
        <%= f.radio_button :payment, "prepayment" %> <%= f.label :payment,  "Prepayment by phone"%> </br>
        <%= f.hidden_field :step %>
        <%= f.hidden_field :date_from %>
        <%= f.hidden_field :date_to %>
        <%= f.hidden_field :client_id %>
        <%= f.hidden_field :room_id %>
      </div>
      <div class="form-group">
        <%= f.submit "Choose", class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>